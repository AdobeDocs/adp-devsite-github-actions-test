{
  "private": true,
  "name": "dev-site-documentation-template",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdobeDocs/dev-site-documentation-template"
  },
  "author": {
    "name": "Stephan Ringel",
    "url": "https://github.com/icaraps"
  },
  "dependencies": {
    "@adobe/gatsby-theme-aio": "^4.14.6",
    "gatsby": "4.22.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "resolutions": {
    "sharp": "0.33.0",
    "gatsby-sharp": "1.12.0"
  },
  "scripts": {
    "start": "gatsby build && gatsby serve",
    "start:prefix": "gatsby build --prefix-paths && gatsby serve --prefix-paths",
    "dev": "node ./dev.mjs",
    "dev:gatsby": "gatsby develop",
    "dev:https": "gatsby develop --https --host localhost.corp.adobe.com --port 9000",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "lint": "npx --yes github:AdobeDocs/adp-devsite-utils#add-lint-check runLint -v",
    "buildNavigation": "npx --yes github:AdobeDocs/adp-devsite-utils buildNavigation -v",
    "buildRedirections": "npx --yes github:AdobeDocs/adp-devsite-utils buildRedirections -v",
    "renameFiles": "npx --yes github:AdobeDocs/adp-devsite-utils renameFiles -v",
    "normalizeLinks": "npx --yes github:AdobeDocs/adp-devsite-utils normalizeLinks -v",
    "checkLinks": "npx --yes github:AdobeDocs/adp-devsite-utils checkLinks -v",
    "buildSiteWideBanner": "npx --yes github:AdobeDocs/adp-devsite-utils buildSiteWideBanner -v",
    "lint:warnings": "remark src/pages --quiet --rc-path remark-warnings.yml",
    "lint:errors": "remark src/pages --quiet --rc-path remark-errors.yml"
  },
  "packageManager": "yarn@3.2.1",
  "devDependencies": {
    "express": "5.1.0",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "remark-lint": "^10.0.1",
    "remark-lint-final-newline": "^3.0.1",
    "remark-lint-no-heading-punctuation": "^4.0.1"
  }
}
